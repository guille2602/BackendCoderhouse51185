<div id="productsList">
    <h1>Mocking de productos:</h1>
    <div id="products">
    {{#each prodsList}}
        <div class="product">
            <div style="width: 100%; height: 300px; margin-bottom: 2em; margin-top: 2em">
            <img style="object-fit: cover; width: 100%; height: 100%;" src="{{this.thumbnail}}"/>
            </div>
            <h2>Id: {{this._id}}</h2>
            <h2>Title: {{this.title}}</h2>
            <h2>Description: {{this.description}}</h2>
            <h2>Code: {{this.code}}</h2>
            <h2>Price: {{this.price}}</h2>
            <h2>Status: {{this.status}}</h2>
            <h2>Stock: {{this.stock}}</h2>
            <h2>Category: {{this.category}}</h2>
            {{#if @root.admin}}
                <button onclick="handleDelete('id_{{this._id}}')" class="btn btn-primary">Eliminar</button>
            {{/if}}
        </div>
    {{/each}}
</div>