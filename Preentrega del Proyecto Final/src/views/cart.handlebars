<div id="productsList">
    <div id="products">
    <h1>Listado de productos del carrito:</h1>
    <div class="productsList">
        {{#each payload}}
            <div class="product mx-auto">
                <h2>Id: {{this.product._id}}</h2>
                <h2>Title: {{this.product.title}}</h2>
                <h2>Description: {{this.product.description}}</h2>
                <h2>Code: {{this.product.code}}</h2>
                <h2>Price: {{this.product.price}}</h2>
                <h2>Category: {{this.product.category}}</h2>
                <h2>Quantity: {{this.quantity}}</h2>
                <div class="row mt-4 mb-2 me-3">
                <button class="btn btn-primary" onclick="handleDeleteProduct(event, '{{this.product._id}}')">Eliminar del carrito</button>
                 </div>   
            </div>
        {{/each}}
    </div>
    <div class="container text-center">
        <a class="btn btn-primary mb-4" href="/products">Volver a productos</a>
        <button onClick="handleEmptyCart(event)" class="btn btn-secondary mb-4">Vaciar carrito</button>
        <button onClick="handlePurchase(event)" class="btn btn-danger mb-4">Finalizar compra</button>

    </div>
</div>
<script src="../js/products.js"></script>