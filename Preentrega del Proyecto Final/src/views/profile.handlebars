<div class="profile-container">
        <div class="avatar-container">
            <img 
                {{!-- No se agrega avatar del usuario porque el host no soporta carga de archivos --}}
                src="https://towerstonecorp.com/wp-content/uploads/sites/8/2022/11/360_F_516275801_f3Fsp17x6HQK0xQgDQEELoTuERO4SsWV.jpg"
                alt="Profile photo">
        </div>
        <div class="profile-info">
            <h4>Nombre:</h4>
            <p>{{user.name}}</p>
            <h4>Correo</h4>
            <p>{{user.email}}</p>
            {{#if admin}}
                <p><b>Se ha conectado como administrador</b></p>
            {{/if}} 
        </div>
    <div class="row">
        <button class="btn btn-danger mb-2" id="logout-btn">Cerrar sesi√≥n</button>
        <a href="/products" class="btn btn-primary mb-2">Volver a productos</a>
        {{#if admin}}
            <a href="/users-panel" class="btn btn-warning mb-4">Gestionar usuarios</a>
        {{/if}} 
    </div>
</div>
