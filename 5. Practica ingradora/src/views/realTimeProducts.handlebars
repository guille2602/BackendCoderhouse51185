<div id="productsList">
    <div id="products">
    <h1>Listado de productos:</h1>
    {{#each prodsList}}
        <div class="product">
            <h2>Id: {{this.id}}</h2>
            <h2>Title: {{this.title}}</h2>
            <h2>Description: {{this.description}}</h2>
            <h2>Code: {{this.code}}</h2>
            <h2>Price: {{this.price}}</h2>
            <h2>Status: {{this.status}}</h2>
            <h2>Stock: {{this.stock}}</h2>
            <h2>Category: {{this.category}}</h2>
            {{!-- *** Botón para eliminar el producto llamando al método indicado con event.target.id*** --}}
            <button onclick="handleDelete({{this.id}})">Eliminar</button>
        </div>
    {{/each}}
    </div>
    <form id="newProdForm" style="display:flex; flex-direction:column">
        <h1>Crear nuevo producto:</h1>
        <label>Título</label>
        <input name="title" id="title">
        <label>Descripción:</label>
        <input name="description" id="description">
        <label>Código:</label>
        <input name="code" id="code">
        <label>Precio:</label>
        <input name="price" id="price">
        <label>Stock</label>
        <input name="stock" id="stock">
        <label>Categoria</label>
        <input name="category" id="category">
        <label>Ruta de imágen:</label>
        <input name="thumbnail" id="thumbnail">
        <button id="submitBtn">Confirmar</button>
    </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>
